<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corona"
    android:backgroundTint="#90000000"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    tools:context=".ui.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Hello !"
            android:textColor="@color/whiteColor"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="85dp"
            android:gravity="center"
            android:text="How is your health at the moment?"
            android:textColor="@color/whiteColor"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="150dp"
            android:backgroundTint="@color/whiteColor"
            android:drawableLeft="@drawable/ic_sentiment_satisfied_black_24dp"
            android:drawableTint="@color/greenColor"
            android:text="Good"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="150dp"
            android:backgroundTint="@color/whiteColor"
            android:drawableLeft="@drawable/ic_sentiment_dissatisfied_black_24dp"
            android:drawableTint="@color/redColor"
            android:text="Bad"
            android:textStyle="bold" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <View
                android:layout_width="8dp"
                android:layout_height="80dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/line_radius"
                android:backgroundTint="@color/blueColor" />


            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:text="Total Confirmed"
                android:textColor="@color/blackColor"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/confirmed_number"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:text="0000000"
                android:textColor="@color/blackColor"
                android:textSize="19dp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <View
                android:layout_width="8dp"
                android:layout_height="80dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/line_radius"
                android:backgroundTint="@color/redColor" />


            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:text="Total Deaths"
                android:textColor="@color/blackColor"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/confirmed_deaths"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:text="0000000"
                android:textColor="@color/blackColor"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <View
                android:layout_width="8dp"
                android:layout_height="80dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/line_radius"
                android:backgroundTint="@color/greenColor" />


            <TextView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:text="Total Recovered"
                android:textColor="@color/blackColor"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/confirmed_recoveries"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:text="0000000"
                android:textColor="@color/blackColor"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>