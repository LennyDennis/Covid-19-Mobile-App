<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/line_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@color/anotherBlue">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/country_flag"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_launcher_round"
            app:civ_border_color="@color/whiteColor"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/country_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Country name"
            android:textColor="@color/whiteColor"
            android:textSize="22dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/country_cases"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cases  0000000"
            android:textColor="@color/blueColor"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/country_deaths"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="Cases  0000000"
            android:textColor="@color/redColor"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/country_recoveries"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cases  0000000"
            android:textColor="@color/greenColor"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/today_cases"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@color/blueColor"
            android:gravity="center"
            android:text="Today's Cases  0000000"
            android:textColor="@color/whiteColor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/today_death"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@color/redColor"
            android:gravity="center"
            android:text="Today's deaths  0000000"
            android:textColor="@color/whiteColor"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>